let result=$1+$2
echo $result

// ./soma <n1> <n2>

if [ $1 -gt $2 ]
then
	echo "O maior valor informado é" $1
	let result=$1+$2
	echo "A soma é:" $result
else 
	echo "O maior valor informado é" $2
	let result=$1+$2
	echo "A soma é:" $result
fi

// ./maior_soma <n1> <n2>

num=$1
i=0
while [ $i -le $num ]
do
	echo "$i "
	let i=$i+2
done

